                  <option value="seleccione">Seleccione Destino</option>
                </select>
                <label for="tiempo" class="form-label">Tiempo estimado:</label>
                <input type="number" class="form-control" id="tiempo" name="tiempo" placeholder="Tiempo Estimado">
